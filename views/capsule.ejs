<!-- settings button -->
<button style="position:fixed;bottom:10px;right:10px" type="button" class="btn btn-default" data-toggle="modal" data-target="#exampleModal">
  <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
</button>

