      </ul>
    </div>
  </div>
</nav>

<!-- Main content -->
<div style="padding-top:50px">
  <blockquote>
      <p><%= capsule.capsuleName %></p>
      <small>created <cite title="Source Title"><%= capsule.date %></cite></small>
      <small>marinate until <cite title="Source Title"><%= capsule.endDate %></cite></small>
  </blockquote>
</div>

<!-- Text Area -->
<form style="position:absolute;right:30px;bottom:0px;padding:10px" action="/newpost" method="post" name="newpost">
  <div class="col-lg-6">
      <div class="input-group">
          <textarea style="display:none" name="capsuleID"><%= capsule._id %></textarea>
          <input type="text" class="form-control" name="capsuleEntry" placeholder="Post something..">
          <span class="input-group-btn">
            <button class="btn btn-primary" type="submit">Post</button>
          </span>
      </div><!-- /input-group -->
    </div><!-- /.col-lg-6 -->
  </div>
</form><!-- /.row -->

<form style="position:fixed;bottom:10px;right:10px" action="/removepost" method="post" name"removepost">
  <textarea style="display:none" name="capsuleID"><%= capsule._id %></textarea>
  <button type="submit" class="btn btn-danger" aria-label="Trash">
    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
  </button>
</form>

